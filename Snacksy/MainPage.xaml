<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TiendaSabrosita"
             x:Class="TiendaSabrosita.MainPage">
    <StackLayout Padding="10">
        <CollectionView x:Name="ProductosView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="10" Margin="5">
                        <StackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="Medium" />
                            <Label Text="{Binding Categoria}" FontSize="Small" />
                            <Label Text="Precio: ${Binding Precio}" />
                            <Label Text="Stock: {Binding Stock}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
