<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Snacksy.Views.ProductosFormPage"
             Title="Formulario de Producto"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Nombre" />
        <Entry x:Name="nombreEntry" Placeholder="Nombre del producto" />

        <Label Text="Precio" />
        <Entry x:Name="precioEntry" Placeholder="Precio" Keyboard="Numeric" />

        <Label Text="Stock" />
        <Entry x:Name="stockEntry" Placeholder="Stock" Keyboard="Numeric" />

        <Button Text="Guardar"
                BackgroundColor="#43A047"
                TextColor="White"
                Clicked="OnGuardarClicked" />

        <Button Text="Cancelar"
                BackgroundColor="Gray"
                TextColor="White"
                Clicked="OnCancelarClicked" />
    </VerticalStackLayout>
</ContentPage>
